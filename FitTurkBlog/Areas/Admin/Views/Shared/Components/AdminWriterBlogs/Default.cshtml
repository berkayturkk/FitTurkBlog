
@using FitTurkBlog.Entities.Concrete
@model List<Blog>
@{
    Layout = null;
}

<div id="wrapper">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yazar Blog Tablosu</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <br />
                      
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Blog Başlığı</th>
                                    <th>Blog Puanı</th>
                                    <th>Blog Tarihi</th>
                                    <th>Blog Durumu</th>
                                    <th>Detay</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.BlogID</td>
                                        <td><img src="@item.BlogImage" class="rounded-circle" height="48" width="48" /></td>
                                        <td>@item.BlogTitle</td>
                                        <td>0</td>
                                        <td>@(((DateTime)item.BlogCreateDate).ToString(" dd-MMM-yyyy"))</td>
                                        <td>
                                            @if (item.BlogStatus)
                                            {
                                                <a href="~/Admin/AdminWriter/ChangeStatusWriter/@item.BlogID" id="Durum_@item.BlogID" class="btn btn-secondary">Pasif Yap</a>
                                            }
                                            else
                                            {
                                                <a href="~/Admin/AdminWriter/ChangeStatusWriter/@item.BlogID" id="Durum_@item.BlogID" class="btn btn-primary">Aktif Yap</a>
                                            }
                                        </td>
                                        <td><a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-info">Bloga Git</a></td>
                                        <td><a href="/Blog/DeleteBlog/@item.BlogID/" class="btn btn-danger" onclick="return confirm('Blogu silmek istediğine emin misin?');">Blogu Sil</a></td>

                                    </tr>
                                }

                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
