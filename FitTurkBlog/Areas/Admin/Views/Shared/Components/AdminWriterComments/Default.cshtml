@using FitTurkBlog.Entities.Concrete
@model List<Comment>
@{
    Layout = null;
}

<div id="wrapper">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yazar Yorum Tablosu</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                        <br />

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Yorum Başlığı</th>
                                    <th>Blog Başlığı</th>
                                    <th>Blog Puanı</th>
                                    <th>Tarih</th>
                                    <th>Detay</th>
                                    <th>Sil</th>
                                    <th>Bloga Git</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CommentID</td>
                                        <td>@item.CommentTitle</td>
                                        <td>@item.Blog.BlogTitle</td>
                                        <td>@item.BlogScore</td>
                                        <td>@(((DateTime)item.CommentDate).ToString(" dd-MMM-yyyy"))</td>
                                        <td><a href="/Admin/AdminComment/CommentDetails/@item.CommentID/" class="btn btn-secondary">Yorumu Detayı</a></td>
                                        <td><a href="/Admin/AdminComment/DeleteComment/@item.CommentID/" class="btn btn-danger" onclick="return confirm('Yorumu silmek istediğine emin misin?');">Yorumu Sil</a></td>
                                        <td><a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-info">Bloga Git</a></td>
                                    </tr>
                                }

                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
