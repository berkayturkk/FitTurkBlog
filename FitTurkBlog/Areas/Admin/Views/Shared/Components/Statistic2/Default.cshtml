<div class="row">
    <div class="col-lg-6">
        <div class="widget navy-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Dashboard</h1>
                <h4 class="font-bold no-margins">
                    FitTurkBlog
                </h4>
                <small>Projemizin bu panelinde Admin işlemleri bir Area yapısı üzerinden gerçekleşmektedir. 
                </small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget lazur-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Son Eklenen Blog</h1>

                <h4 class="font-bold no-margins">
                    @ViewBag.vSonBlogTitle
                </h4>
                <small>@ViewBag.vSonBlogContent.Substring(0,@ViewBag.vSonBlogContent.Substring(0,50).LastIndexOf(" "))...</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart2"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget yellw-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">₺ @ViewBag.vEarning </h1>

                <h4 class="font-bold no-margins">
                    Blog Sitesi Kazancı
                </h4>
                <small>Ürün Tanıtımları, Promosyonlar, Reklamlar, Anlaşmalar</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart3"></div>
            </div>
        </div>
    </div>
</div>