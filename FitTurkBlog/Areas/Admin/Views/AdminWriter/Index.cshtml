@using FitTurkBlog.Entities.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model IPagedList<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1>&nbsp <strong>Yazarlar</strong></h1>
<br />
<div id="wrapper">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yazarlar Tablosu</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <br />

                        <a href="/Admin/AdminWriter/AddWriter/" class="btn btn-primary">Yeni Yazar Ekle</a>

                        <!-- Paging -->
                        <div class="pull-right">
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index",
                            new
                            {
                            page

                            }),
                            new PagedListRenderOptions
                            {
                            LiElementClasses = new string[] { "page-item" },
                            PageClasses = new string[] { "page-link" },
                            Display = PagedListDisplayMode.IfNeeded

                            })

                            <br />
                            <br />
                        </div>

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Ad-Soyad</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>E-Posta</th>
                                    <th>Durum</th>
                                    <th>Detay</th>
                                    <th>Düzenle</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><img src="@item.ImageUrl" class="rounded-circle" height="48" width="48" /></td>
                                        <td>@item.NameSurname</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Email</td>
                                        <td>
                                            @if (item.Status)
                                            {
                                                <a href="~/Admin/AdminWriter/ChangeStatusWriter/@item.Id" id="Durum_@item.Id" class="btn btn-secondary">Pasif Yap</a>
                                            }
                                            else
                                            {
                                                <a href="~/Admin/AdminWriter/ChangeStatusWriter/@item.Id" id="Durum_@item.Id" class="btn btn-primary">Aktif Yap</a>
                                            }
                                        </td>
                                        <td><a href="/Admin/AdminWriter/WriterDetail/@item.Id/" class="btn btn-info">Detay</a></td>
                                        <td><a href="/Admin/AdminWriter/EditWriter/@item.Id/" class="btn btn-warning">Düzenle</a></td>
                                        <td><a href="/Admin/AdminWriter/DeleteWriter/@item.Id/" class="btn btn-danger" onclick="return confirm('Yazarı silmek istediğine emin misin?');">Sil</a></td>

                                    </tr>
                                }

                            </tbody>


                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



