@model FitTurkBlog.UI.Models.AddProfileImage
@{
    ViewData["Title"] = "EditWriter";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1><strong>Yazar Hakkında</strong></h1>
<br />
<br />

@using (Html.BeginForm("EditWriter", "AdminWriter", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-lg-12">
        <br />

        @Html.Label("Yazar Ad-Soyad")
        @Html.TextBoxFor(x => x.NameSurname, new{ @class = "form-control"})
        <br />
        @Html.Label("Yazar Kullanıcı Adı")
        @Html.TextBoxFor(x => x.Username, new{ @class = "form-control"})
        <br />
        @Html.Label("Yazar Profil Resmi")
        <br />
        <div class="mb-3">
            <input id="input-b2" name="ImageUrl" type="file" class="file form-control" data-show-preview="true">
        </div>
        @Html.Label("Yazar E-Posta Adresi")
        @Html.TextBoxFor(x => x.Email, new{ @class = "form-control"})
        <br />
        @Html.Label("Yazar Hakkında")
        @Html.TextAreaFor(x => x.About,5,3, new{ @class = "form-control"})
        <br />
        <br />
        <button class="btn btn-primary">Güncelle</button>
        <a href="/Admin/AdminWriter/Index/" class="btn btn-danger">İptal</a>
    </div>
}
