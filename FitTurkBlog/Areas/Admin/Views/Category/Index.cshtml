@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<FitTurkBlog.Entities.Concrete.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<br />
<table class="table table-bordered">
    <tr>
    <th>#</th>
    <th>Kategori Adı</th>
    <th>Durum</th>
    <th>Pasif Yap</th>
    <th>Aktif Yap</th>
    <th>Düzenle</th> 
</tr>
@foreach (var item in Model)
{
   <tr>
       <th>@item.CategoryID</th>
       <td>@item.CategoryName</td>
       <td>@item.CategoryStatus</td>
       <td><a href="/Category/CategoryDelete/@item.CategoryID/" id="deleteBtn" onclick="    return confirm{ }" class="btn btn-danger">Pasif Yap</a></td>

       <td><a href="#" class="btn btn-primary">Aktif Yap</a></td>
       <td><a href="#" class="btn btn-secondary">Düzenle</a></td>
   </tr> 
}
</table>
<br />
<a href="/Admin/Category/AddCategory/" class="btn btn-info">Yeni Kategori Ekle</a>
<br />
<br />
<br />
@Html.PagedListPager((IPagedList)Model,page =>Url.Action("Index",new{page}))

