@model FitTurkBlog.Entities.Concrete.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1>Yeni Kategori Girişi</h1>
<br />
<br />

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x => x.CategoryName,"",new {@class = "text-danger"})
    <br />
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.CategoryDescription,10,3, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x => x.CategoryDescription,"",new {@class = "text-danger"})
    <br />
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
}


