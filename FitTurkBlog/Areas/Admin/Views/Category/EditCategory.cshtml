@model FitTurkBlog.Entities.Concrete.Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1>Kategori Düzenleme Sayfası</h1>
<br />
<br />

@using (Html.BeginForm("EditCategory", "Category", FormMethod.Post))
{
    @Html.HiddenFor(x => x.CategoryID, new { @class = "form-control" })

    @Html.Label("Kategori Adı")
    @Html.TextBoxFor(x => x.CategoryName, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x => x.CategoryName,"",new {@class = "text-danger"})
    <br />
    <br />
    @Html.Label("Kategori Açıklaması")
    @Html.TextAreaFor(x => x.CategoryDescription,5,3, new{ @class = "form-control"})
    @Html.ValidationMessageFor(x => x.CategoryDescription,"",new {@class = "text-danger"})
    <br />
    <br />
    <button class="btn btn-warning">Kategoriyi Güncelle</button>
}

