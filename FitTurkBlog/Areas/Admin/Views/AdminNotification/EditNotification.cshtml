@model FitTurkBlog.Entities.Concrete.Notification
@{
    ViewData["Title"] = "EditNotification";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1><strong>Bildirim Düzenleme</strong></h1>
<br />
<br />

@using (Html.BeginForm("EditNotification", "AdminNotification", FormMethod.Post))
{
    <div class="col-lg-12">
        <br />
        @Html.Label("Bildirim Türü")
        @Html.TextBoxFor(x => x.NotificationType, new{ @class = "form-control"})
        <br />
        @Html.Label("Bildirim Sembolü")
        @Html.DropDownListFor(x => x.NotificationTypeSymbol,(List<SelectListItem>)ViewBag.ts,new{ @class = "form-control"})
        <br />
        @Html.Label("Bildirim Sembol Rengi")
        @Html.DropDownListFor(x => x.NotificationTypeSymbolColor,(List<SelectListItem>)ViewBag.tsc,new{ @class = "form-control"})
        <br />
        @Html.Label("Bildirim İçeriği")
        @Html.TextAreaFor(x => x.NotificationDetails,5,3, new{ @class = "form-control"})
        <br />
        <br />
        <button class="btn btn-warning">Bildirim Güncelle</button>
        <a href="/Admin/AdminNotification/AllNotification/" class="btn btn-danger">İptal</a>
    </div>
}

