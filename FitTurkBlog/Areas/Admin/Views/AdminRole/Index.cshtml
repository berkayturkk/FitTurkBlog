@using FitTurkBlog.Entities.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1>&nbsp <strong>Roller</strong></h1>
<br />
<div id="wrapper">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Roller Tablosu</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <a href="/Admin/AdminRole/AddRole/" class="btn btn-primary pull-left">Yeni Rol Ekle</a>
                        <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-info pull-right">Kullanıcı Rol Listesine Git</a>
                        <br />
                        <br />
                        <br />
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Rol Adı</th>
                                    <th>Rol Güncelle</th>
                                    <th>Rol Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td><a href="/Admin/AdminRole/EditRole/@item.Id/" class="btn btn-warning">Düzenle</a></td>
                                        <td><a href="/Admin/AdminRole/DeleteRole/@item.Id/" class="btn btn-danger" onclick="return confirm('Rolü silmek istediğine emin misin?');">Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

