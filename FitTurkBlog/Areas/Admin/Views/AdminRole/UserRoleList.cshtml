@using FitTurkBlog.Entities.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<h1><strong>Kullanıcı Rolleri</strong></h1>
<br />
<br />
<div id="wrapper">
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Kullanıcıların Roller Tablosu</h5>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <a href="/Admin/AdminRole/Index/" class="btn btn-info">Rol Listesine Dön</a>
                        <br />
                        <br />
                        <br />
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Profil Resmi</th>
                                    <th>Ad-Soyad</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Rol Ata</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                         <td><img src="@item.ImageUrl" class="rounded-circle" height="48" width="48" /></td>
                                         <td>@item.NameSurname</td>
                                         <td>@item.UserName</td>
                                         <td><a href="/Admin/AdminRole/AssignRole/@item.Id/" class="btn btn-primary">Rol Ata</a></td>                                  
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

