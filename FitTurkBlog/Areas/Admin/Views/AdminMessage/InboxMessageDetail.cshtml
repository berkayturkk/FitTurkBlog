@model FitTurkBlog.Entities.Concrete.Message2
@{
    ViewData["Title"] = "InboxMessageDetail";
    Layout = "~/Views/Shared/Layouts/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-content mailbox-content">
                    <div class="file-manager">
                        <a class="btn btn-block btn-primary compose-mail" href="/Admin/AdminMessage/SendMessage/">Yeni Mesaj Oluştur</a>
                        <div class="space-25"></div>
                        <h5>Klasörler</h5>
                        <ul class="folder-list m-b-md" style="padding: 0">
                            <li><a href="/Admin/AdminMessage/Inbox/"> <i class="fa fa-inbox "></i> Gelen Mesajlar <span class="label label-warning float-right">@ViewBag.gm</span> </a></li>
                            <li><a href="/Admin/AdminMessage/Sendbox/"> <i class="fa fa-envelope-o"></i> Giden Mesajlar</a></li>
                            <li><a href="/Admin/AdminMessage/GetListImportant/"> <i class="fa fa-certificate"></i> Önemli Mesajlar</a></li>
                            <li><a href="/Admin/AdminMessage/GetListTrash/"> <i class="fa fa-trash-o"></i> Çöp Kutusu</a></li>
                        </ul>
                        <h5>Kategoriler</h5>
                        <ul class="category-list" style="padding: 0">
                            <li><a href="#"> <i class="fa fa-circle text-navy"></i> İş </a></li>
                            <li><a href="#"> <i class="fa fa-circle text-danger"></i> Dokümanlar</a></li>
                            <li><a href="#"> <i class="fa fa-circle text-primary"></i> Sosyal</a></li>
                            <li><a href="#"> <i class="fa fa-circle text-info"></i> Tanıtımlar</a></li>
                            <li><a href="#"> <i class="fa fa-circle text-warning"></i> Talepler</a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    <strong>Mesaj Detayı</strong>
                </h2>
                <br />
                <a href="/Admin/AdminMessage/InboxMessageDetail/@Model.MessageID/" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Yenile"><i class="fa fa-refresh"></i> Yenile</a>
                <a href="/Admin/AdminMessage/IsRead/@Model.MessageID/" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Okundu Olarak İşaretle"><i class="fa fa-eye"></i> </a>
                <a href="/Admin/AdminMessage/IsImportant/@Model.MessageID/" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Önemli Olarak İşaretle" id="btnImportant"><i class="fa fa-exclamation"></i></a>
                <a href="/Admin/AdminMessage/MoveToTrash/@Model.MessageID/" class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Çöp Kutusuna Taşı"><i class="fa fa-trash-o"></i></a>

            </div>

            <div class="mail-box">


                <div class="mail-body">
                    @Html.Label("Mesajı Gönderen")
                    @Html.TextBoxFor(x => x.MessageSenderID,new{ @class = "form-control",@disabled="disabled"})
                    <br />
                    @Html.Label("Mesajı Alan")
                    @Html.TextBoxFor(x => x.MessageReceiverID,new{ @class = "form-control",@disabled="disabled"})
                    <br />
                    @Html.Label("Mesaj Konusu")
                    @Html.TextBoxFor(x => x.MessageSubject, new{ @class = "form-control",@disabled="disabled"})
                    <br />
                    @Html.Label("Mesaj İçeriği")
                    @Html.TextAreaFor(x => x.MessageDetails, new{ @class = "form-control", rows= 10, columns= 20 ,@disabled="disabled"})
                    <br />
                    <br />
                    <div class="mail-body text-right tooltip-demo">
                        <a href="/Admin/AdminMessage/SendMessage/" class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="top" title="Yanıt Ver"><i class="fa fa-reply"></i> Yanıt Ver</a>
                        <a href="/Admin/AdminMessage/DeleteMessage/@Model.MessageID/" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="Sil"><i class="fa fa-times"></i> Sil</a>
                        <a href="/Admin/AdminMessage/MoveToTrash/@Model.MessageID/" class="btn btn-warning btn-sm" data-toggle="tooltip" data-placement="top" title="Çöp Kutusuna Taşı"><i class="fa fa-trash-o"></i> Çöp Kutusuna Taşı</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



