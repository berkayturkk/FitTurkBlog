@model FitTurkBlog.Entities.Concrete.Message2
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/Layouts/WriterLayout.cshtml";
}

<h1>Mesaj Detay Sayfası</h1>
<br />
<a href="/Message/MessageDetails/@Model.MessageID" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="left" title="Yenile"><i class="mdi mdi-refresh"></i> Yenile</a>
<a href="/Message/IsImportant/@Model.MessageID/" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Önemli Olarak İşaretle" id="btnImportant"><i class="mdi mdi-star"></i></a>
<a href="/Message/MoveToTrash/@Model.MessageID/" class="btn btn-primary btn-sm" data-toggle="tooltip" data-placement="top" title="Çöp Kutusuna Taşı"><i class="mdi mdi-delete"></i></a>
<br />
<br />
@Html.Label("Mesaj ID")
@Html.TextBoxFor(x => x.MessageID, new{ @class = "form-control",@disabled="disabled"})
<br />
@Html.Label("Mesajı Gönderen")
@Html.TextBoxFor(x => x.MessageSenderUser.NameSurname, new{ @class = "form-control",@disabled="disabled"})
<br />@Html.Label("Mesajı Alan")
@Html.TextBoxFor(x => x.MessageReceiverUser.NameSurname, new{ @class = "form-control",@disabled="disabled"})
<br />
@Html.Label("Mesaj Konusu")
@Html.TextBoxFor(x => x.MessageSubject, new{ @class = "form-control",@disabled="disabled"})
<br />
@Html.Label("Mesaj İçeriği")
@Html.TextAreaFor(x => x.MessageDetails,15,3, new{ @class = "form-control",@disabled="disabled"})
<br />
<br />
<a href="/Message/InBox/" class="btn btn-success" style="margin-right:15px">Mesajlara Dön</a>
<a href="/Message/SendMessage/" class="btn btn-info" style="margin-right:15px">Mesaja Cevap Ver</a>
<a href="/Message/DeleteMessage/@Model.MessageID" onclick="return confirm('Mesajı silmek istediğine emin misin?');" class="btn btn-danger" style="margin-right:15px">Mesajı Sil</a>

