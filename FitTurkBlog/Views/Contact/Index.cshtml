@using FitTurkBlog.Entities.Concrete
@model List<Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/UserLayout.cshtml";
}

<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-contact py-5">
        <div class="container py-lg-5 py-md-3">
            <h3 class="title-big text-center">İLETİŞİM</h3>
            <p class="mt-3">BİLGİ ALMAK İÇİN BİZİMLE İLETİŞİME GEÇ</p>
        </div>
    </div>
</section>
<!-- contact form -->
<section class="w3l-contacts-12 py-5" id="contact">
	<div class="container py-md-3">
		<div class="contacts12-main">
			<div class="title-section">
                <h3 class="main-title-w3 mb-3"><span class="lnr lnr-map-marker"></span> ÜMRANİYE, İSTANBUL, TÜRKİYE </h3>
                <h3><span class="lnr ml-2 lnr-phone-handset"></span><a href="tel:+90 216 412 7884" > +90 216 412 7884</a></h3>
                <br>
                <br>
			</div>
			<form method="post" class="">
				<div class="main-input">
					<input type="text" name="ContactUserName" placeholder="Adınızı Giriniz" class="contact-input" required="" />
					<input type="email" name="ContactMail" placeholder="E-posta Adresinizi Giriniz" class="contact-input" required="" />
					<input type="text" name="ContactSubject" placeholder="Mesaj Konunuzu Giriniz" class="contact-input" required="" />
					<textarea class="contact-textarea contact-input" name="ContactMessage" placeholder="Mesajınızı Yazınız..."
						required=""></textarea>
				</div>
				<div class="text-right">
					<button class="btn-primary btn btn-style">Gönder</button>
				</div>
			</form>
		</div>
	</div>
</section>
<!-- //contact form -->

