@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/UserLayout.cshtml";
}


<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-3">
            <h3 class="title-big text-center">Hakkımızda</h3>
            <p class="mt-3">Sağlıklı Paylaşım Platformu FITTURKBLOG'a Hoşgeldiniz</p>
        </div>
    </div>
</section>

<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <div class="blog-grid-top">

                    <div class="blog_info_left_grid">
                        <a href="single.html">
                            <img src="~/FitTurkBlog/images/blog1.jpg" class="img-fluid" alt="">
                        </a>
                    </div>
                    <h3>
                        Biz Kimiz & Mizyonumuz & Vizyonumuz
                    </h3>
                    @await Component.InvokeAsync("AboutDetails")
                    <a href="/Blog/Index/" class="btn-style btn-primary btn mt-lg-5 mt-4">Blog Yazıları</a>
                </div>
            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <div class="tech-btm">
                        <img src="~/FitTurkBlog/images/banner1.jpg" class="img-fluid" alt="">
                    </div>
                    <h3>Bültenimize Abone Olun</h3>
                    <br />
                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")
                    @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")


                </div>
            </aside>
        </div>
        <!--//right-->
    </div>
</section>
<!--//main-->
<!-- middle -->
<div class="middle py-5">
    <div class="container py-xl-5 py-lg-3">
        <div class="welcome-left text-center py-md-3">
            <h3 class="mb-4">SENDE ARAMIZA KATIL</h3>
            <p class="text-italic">BİLGİLERİNİ, DENEYİMLERİNİ, ARAŞTIRMALARINI PAYLAŞ</p>
            <a href="/RegisterUser/Index/" class="btn-style btn-primary btn mt-lg-5 mt-4">Kayıt Ol</a>
        </div>
    </div>
</div>
