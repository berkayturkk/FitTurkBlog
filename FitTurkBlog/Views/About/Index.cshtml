<section class="w3l-blog-block py-5">

    @await Component.InvokeAsync("BlogLast3PostOnAbout")

    @await Component.InvokeAsync("BestBlog3PostOnAbout")

    @await Component.InvokeAsync("MostCommentedBlog3PostOnAbout")

</section>


<section class="w3l-stats w3l-bottom-grids-6 py-5" id="stats">
    <div class="gallery-inner container py-md-5 py-4">
        <div class="row stats-con">
            <div class="col-md-3 col-6 stats_info grids-feature area-box">
                <div class="icon">
                    <span class="lnr lnr-book"></span>
                </div>
                <p class="counter">@ViewBag.v1</p>
                <h3>Blog Sayısı</h3>
            </div>
            <div class="col-md-3 col-6 stats_info grids-feature area-box">
                <div class="icon">
                    <span class="lnr lnr-users"></span>
                </div>
                <p class="counter">@ViewBag.v2</p>
                <h3>Yazar Sayısı</h3>
            </div>
            <div class="col-md-3 col-6 stats_info grids-feature area-box mt-md-0 mt-5">
                <div class="icon">
                    <span class="lnr lnr-bubble"></span>
                </div>
                <p class="counter">@ViewBag.v3</p>
                <h3>Yorum Sayısı</h3>
            </div>
            <div class="col-md-3 col-6 stats_info grids-feature area-box mt-md-0 mt-5">
                <div class="icon">
                    <span class="lnr lnr-layers"></span>
                </div>
                <p class="counter">@ViewBag.v4</p>
                <h3>Kategori Sayısı</h3>
            </div>
        </div>
    </div>
</section>
