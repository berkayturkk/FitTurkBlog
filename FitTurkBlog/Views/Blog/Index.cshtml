@using FitTurkBlog.Entities.Concrete
@model List<Blog>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/UserLayout.cshtml";
}

<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about py-5">
        <div class="container py-lg-5 py-md-3">
            <h3 class="title-big text-center">Blog Yazıları</h3>
            <p class="mt-3">Sağlıklı Paylaşımların Yeri</p>
        </div>
    </div>
</section>
<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="inner-sec">
            <!--left-->
            <div class="left-blog-info-w3layouts-agileits text-left">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 item">
                            <div class="card">
                                <div class="card-header p-0 position-relative">
                                    <a href="#blog-single">
                                        <img class="card-img-bottom d-block" src="@item.BlogImage" alt="Card image cap">
                                    </a>
                                    <ul class="location-top">
                                        <li class="new">@item.Category.CategoryName</li>
                                    </ul>
                                    <div class="blog-info-middle">
                                        <ul>
                                            <li class="mx-2">
                                                <a href="#"><i class="far fa-thumbs-up"></i> 201 Likes</a>
                                            </li>
                                            <li>
                                                <a href="#"><i class="far fa-comment"></i> 15 Comments</a>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                                <div class="card-body blog-details">
                                    <a href="/Blog/BlogReadAll/@item.BlogID/" class="blog-desc">@item.BlogTitle</a>
                                    <p>@item.BlogContent.Substring(0,@item.BlogContent.Substring(0,130).LastIndexOf(" "))...</p>
                                    <div class="author align-items-center mt-3 mb-1">
                                        <div class="img-circle">
                                            <img src="~/FitTurkBlog/images/team2.jpg" class="mr-3 img-fluid" alt="...">
                                        </div>
                                        <div class="author-info">
                                            <a href="#author">Berkay TÜRK</a> <br> <span class="meta-value">@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</span>
                                        </div>
                                        <div class="container">
                                            <div class="banner-info-bg">
                                                <a class="btn btn-style btn-primary mt-md-5 mt-4" href="/Blog/BlogReadAll/@item.BlogID/">Devamını Oku</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br>
                        </div>
                    }
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-left mt-4">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Previous</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!--//left-->
            </div>
        </div>
    </div>
</section>
<!--//main-->
