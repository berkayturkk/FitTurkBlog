@model FitTurkBlog.Entities.Concrete.Blog

@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/Layouts/WriterLayout.cshtml";
}

<h1>Yeni Blog Girişi</h1>
<br />
<br />

@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.Label("Blog Başlığı")
    @Html.TextBoxFor(x => x.BlogTitle, new{ @class = "form-control"})
    <br />
    @Html.Label("Blog Görseli")
    <br />
    <div class="mb-3">
        <input id="input-b2" name="BlogImage" type="file" class="file form-control" data-show-preview="true" accept="image/png, image/jpeg">
    </div>
    <br />
    @Html.Label("Blog Küçük Görseli")
    <br />
    <div class="mb-3">
        <input id="input-b2" name="BlogThumbnailImage" type="file" class="file form-control" data-show-preview="true" accept="image/png, image/jpeg">
    </div>
    <br />
    @Html.Label("Blog Kategorisi")
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.cv,new{ @class = "form-control"})
    <br />
    @Html.Label("Blog Durumu")
    @Html.DropDownListFor(x => x.BlogStatus,(List<SelectListItem>)ViewBag.sv,new{ @class = "form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.TextAreaFor(x => x.BlogContent,25,3, new{ @class = "form-control"})
    <br />
    <br />
    <button class="btn btn-dark">Blogu Kaydet</button>
}
