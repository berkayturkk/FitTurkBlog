@using FitTurkBlog.Entities.Concrete
@model List<Blog>

@{
    ViewData["Title"] = "BlogListByWriter";
    Layout = "~/Views/Shared/Layouts/WriterLayout.cshtml";
}

<h1>Yazarın Blogları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Blog Başlığı</th>
        <th>Oluşturma Tarihi</th>
        <th>Kategori</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
   {
       <tr>
           <td>@item.BlogID</td>
           <td>@item.BlogTitle</td>
           <td>@item.BlogCreateDate.ToShortDateString()</td>
           <td>@item.CategoryID</td>
           <td>@item.BlogStatus</td>
           <td><a href="#" class="btn btn-danger">Sil</a></td>
           <td><a href="#" class="btn btn-secondary">Düzenle</a></td>
       </tr>
   }
</table>
<br />
<a href="#" class="btn btn-dark">Yeni Blog Oluştur</a>
