@model IEnumerable<FitTurkBlog.Entities.Concrete.Comment>

<div class="comment-top">
    <h4>Yorumlar</h4>

    @if(Model.Count()==0)
    {
        <p style="font-size:16px;">Henüz yorum yok.</p>
    }
    else
    {
    @foreach (var item in Model)
    {
        <div class="media">
            <img src="@item.CommentImageUrl" alt="" class="img-fluid" style="width:75px;height:75px" />
            <div class="media-body">
                <h5 class="mt-0" style="font-size:14px">@item.CommentUserName</h5>
                <p>@item.CommentContent</p>
            </div>

        </div>
    }
    }
</div>



