@model FitTurkBlog.UI.Models.UserResetPassword
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/Layouts/UserLayout.cshtml";
}

<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-classes py-5">
        <div class="container py-lg-5 py-md-3">
            <h3 class="title-big text-center">Giriş Yap</h3>
            <p class="mt-3">Tekrardan Hoşgeldin</p>
        </div>
    </div>
</section>

<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form class="m-t" role="form" method="post">
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label>E-posta Adresi</label>
                            <input type="text" class="form-control" placeholder="" asp-for="@Model.URPEmail" required="" st>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-block submit mb-4 ">Sıfırla</button>

                    <span asp-validation-for="@Model.URPEmail" class="text-danger"></span>

                    <div class="text-danger" style="font-size:14px;" asp-validation-summary="ModelOnly"></div>
                   

                </form>
            </div>
        </div>
    </div>
    <br />

</section>
<!--//main-->

