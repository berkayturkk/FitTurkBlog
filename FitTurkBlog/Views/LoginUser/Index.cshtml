@model FitTurkBlog.UI.Models.UserSignInViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/UserLayout.cshtml";
}

<section class="w3l-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-classes py-5">
        <div class="container py-lg-5 py-md-3">
            <h3 class="title-big text-center">Giriş Yap</h3>
            <p class="mt-3">Tekrardan Hoşgeldin</p>
        </div>
    </div>
</section>

<!--/main-->
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form class="m-t" role="form" asp-action="Index">
                    <label class="text-danger">@TempData["Giriş Yapılamadı"]</label>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label>Kullanıcı Adı</label>
                            <input type="text" class="form-control" placeholder="" asp-for="@Model.UserName" required="">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12 mb-3">
                            <label>Şifre</label>
                            <input type="password" class="form-control" placeholder="" asp-for="@Model.Password" required="">
                        </div>
                    </div>

                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" asp-for="@Model.IsRememberMe">
                        <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                        <a href="/LoginUser/ResetPassword/" style="text-decoration:none; margin-left:50px">Şifremi Unuttum</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block submit mb-4">Giriş Yap</button>
                    <p><a href="/RegisterUser/Index/"> Hesabınız yok mu?</a></p>

                </form>
            </div>
        </div>
    </div>
    <br />

</section>
<!--//main-->
