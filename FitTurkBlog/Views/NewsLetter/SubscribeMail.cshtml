
<div class="tech-btm">
    <p>Sağlıklı paylaşımlara e-posta yoluyla ulaşın. </p>
    <form action="/NewsLetter/SubscribeMail/" method="post">
        <input type="email" id="txtmail" placeholder="E-posta Adresi" required="" name="Mail">
        <button class="btn-primary btn btn-style substring" type="submit"  id="btn">Abone Ol</button>
    </form>
</div>

<script type="text/javascript">

$("#btn").click(function() { 
    let values = {
        Mail: $("#txtmail").val()
    };

    $.ajax({
        type: "Post",
        url: "/NewsLetter/SubscribeMail/",
        data: values,
        success: function(func) {
            let result = jQuery.parseJSON(func);
        }
    });
});

</script>

