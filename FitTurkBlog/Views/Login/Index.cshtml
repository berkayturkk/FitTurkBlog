
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layouts/UserLayout.cshtml";
}

<section class="w3l-breadcrumb">
        <div class="breadcrumb-bg breadcrumb-bg-classes py-5">
            <div class="container py-lg-5 py-md-3">
                <h3 class="title-big text-center">Giriş Yap</h3>
                <p class="mt-3">Tekrardan Hoşgeldin</p>
            </div>
        </div>
    </section>
    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <h3 class="tittle"></h3>
            <div class="row inner-sec">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail1 mb-2">E-Posta Adresi</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="" name="WriterMail">                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="" required="" name="WriterPassword">
                        </div>
                        <div class="form-check mb-2">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Beni Hatırla</label>
                        </div>
                        <button type="submit" class="btn btn-primary submit mb-4">Giriş Yap</button>
                        <p><a href="/Register/Index/"> Hesabınız yok mu?</a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <!--//main-->


