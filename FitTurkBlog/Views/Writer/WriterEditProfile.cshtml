@model FitTurkBlog.UI.Models.UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/Layouts/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri</h4>
            <br />
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad - Soyad</label>
                    <input type="text" asp-for="@Model.UpNameSurname" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">E-Posta Adresi</label>
                    <input type="text" asp-for="@Model.UpMail" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <input type="text" asp-for="@Model.UpImageUrl" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    <input type="text" asp-for="@Model.UpAbout" class="form-control">
                </div>
                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light">İptal</button>
            </form>
        </div>
    </div>
</div>


