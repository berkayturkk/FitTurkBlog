@model FitTurkBlog.UI.Models.UserUpdateViewModel
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/Layouts/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Bilgileri</h4>
            <br />
            <br />
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Ad - Soyad</label>
                    <input type="text" asp-for="@Model.UpNameSurname" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">E-Posta Adresi</label>
                    <input type="text" asp-for="@Model.UpMail" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <input type="text" asp-for="@Model.UpImageUrl" class="form-control">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    <textarea rows="10" class="form-control" asp-for="@Model.UpAbout"></textarea>
                </div>

                <span asp-validation-for="@Model.UpNameSurname" class="text-danger"></span>
                <span asp-validation-for="@Model.UpMail" class="text-danger"></span>
                <span asp-validation-for="@Model.UpImageUrl" class="text-danger"></span>
                <span asp-validation-for="@Model.UpAbout" class="text-danger"></span>

                <div class="text-danger" style="font-size:14px;" asp-validation-summary="ModelOnly"></div>
                
                <br />
                <br />
                <br />

                <button type="submit" class="btn btn-gradient-primary mr-2">Güncelle</button>
                <button class="btn btn-light" asp-action ="Index" asp-controller="Dashboard">İptal</button>
            </form>
        </div>
    </div>
</div>


